@model Lab7.Models.Invoice

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>
<h4>Invoice</h4>
<hr />

<table class="table table-borderless">
    <tbody>
        <tr>
            <td><strong>@Html.DisplayNameFor(m => m.InvoiceId)</strong></td>
            <td>@Html.DisplayFor(m => m.InvoiceId)</td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(m => m.InvoiceDate)</strong></td>
            <td>@Model.InvoiceDate.ToShortDateString()</td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(m => m.BillingAddress)</strong></td>
            <td colspan="3">
                @Html.DisplayFor(m => m.BillingAddress)
                @Html.DisplayFor(m => m.BillingCity)
                @Html.DisplayFor(m => m.BillingState)
                @Html.DisplayFor(m => m.BillingCountry)
            </td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(m => m.Total)</strong></td>
            <td>@Model.Total.ToString("C")</td>
            <td></td>
            <td></td>
        </tr>

        <tr>
            <td><strong>Ordered Songs</strong></td>

            <td colspan="3">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>Track ID</th>
                            <th>Track</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var line in Model.InvoiceLines)
                    {
                        <tr>
                            <td>@line.TrackId</td>
                            <td>@line.Track.Name</td>
                            <td>@line.UnitPrice.ToString("C")</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>

<p>
    @Html.ActionLink("Back to list", "MyOrders")
</p>
